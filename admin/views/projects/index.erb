<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first active"><%= link_to pat(:list), url(:projects, :index) %></li>
      <li><%= link_to pat(:new), url(:projects, :new) %></li>
    </ul>
  </div>
  <div class="content">
    <h2 class="title"><%= pat(:all) %> <% mt(:projects) %></h2>
    <div class="inner">
      <table class="table">
        <tr>
          <th class="first"><%= mat(:project, :id) %></th>
          <th><%= mat(:project, :name) %></th>
          <th><%= mat(:project, :categories) %></th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @projects.each do |project| %>
        <tr>
          <td class="first"><%= project.id %></td>
          <td><%= project.name %></td>
          <td>
            <% project.categories.each do |category| %>
              <%= category.name %>
            <% end %>
          </td>
          <td class="last">
            <%= button_to pat(:edit), url(:projects, :edit, :id => project.id), :method => :get, :class => :button_to %> |
            <%= button_to pat(:delete), url(:projects, :destroy, :id => project.id), :method => :delete, :class => :button_to, :onsubmit => "return confirm('#{pat(:confirm)}')" %>
          </td>
        </tr>
        <% end %>
      </table>
      <div class="actions-bar wat-cf">
        <div class="actions"></div>
      </div>
    </div>
  </div>
</div>
<% content_for :sidebar, partial("base/sidebar") %>
