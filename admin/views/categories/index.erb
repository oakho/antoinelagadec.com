 <div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first active"><%= link_to pat(:list), url(:categories, :index) %></li>
      <li><%= link_to pat(:new), url(:categories, :new) %></li>
    </ul>
  </div>
  <div class="content">
    <h2 class="title"><%= pat(:all) %> <% mt(:categories) %></h2>
    <div class="inner">
      <table class="table">
        <tr>
          <th class="first"><%= mat(:category, :id) %></th>
          <th><%= mat(:category, :name) %></th>
          <th><%= mat(:category, :description) %></th>
          <th><%= mat(:category, :created_at) %></th>
          <th><%= mat(:category, :updated_at) %></th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @categories.each do |category| %>
        <tr>
          <td class="first"><%= category.id %></td>
          <td><%= category.name %></td>
          <td><%= category.description %></td>
          <td><%= category.created_at %></td>
          <td><%= category.updated_at %></td>
          <td class="last">
            <%= button_to pat(:edit), url(:categories, :edit, :id => category.id), :method => :get, :class => :button_to %> |
            <%= button_to pat(:delete), url(:categories, :destroy, :id => category.id), :method => :delete, :class => :button_to, :onsubmit => "return confirm('#{pat(:confirm)}')" %>
          </td>
        </tr>
        <% end %>
      </table>
      <div class="actions-bar wat-cf">
        <div class="actions"></div>
      </div>
    </div>
  </div>
</div>
<% content_for :sidebar, partial("base/sidebar") %>
