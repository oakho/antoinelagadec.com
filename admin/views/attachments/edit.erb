<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to pat(:list), url(:attachments, :index) %></li>
      <li><%= link_to pat(:new), url(:attachments, :new) %></li>
      <li class="active"><%= link_to pat(:edit), url(:attachments, :edit, :id => @attachment.id) %></li>
    </ul>
  </div>
  <div class="content">
    <h2 class="title"><%= pat(:edit) %> <% mt(:attachment) %></h2>
    <div class="inner">
      <img src="<%= @attachment.file.thumb('300x300#').convert('-blur 4x2').url %>">
      <% form_for :attachment, url(:attachments, :update, :id => @attachment.id), multipart: true, :method => :put, :class => :form do |f| %>
        <%= partial "attachments/form", :locals => { :f => f } %>
      <% end %>
    </div>
  </div>
</div>
<% content_for :sidebar, partial("base/sidebar") %>